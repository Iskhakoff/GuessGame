<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="GreetingText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ButtonPlay" parent="Widget.MaterialComponents.Button">
        <item name="android:elevation">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ButtonStartNewGame" parent="Widget.MaterialComponents.Button">
        <item name="android:elevation">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:backgroundTint">@color/green</item>
    </style>

    <style name="ButtonTryAgain" parent="Widget.MaterialComponents.Button">
        <item name="android:elevation">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

</resources>